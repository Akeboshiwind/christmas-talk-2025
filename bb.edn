{:tasks
 {dev:squint (shell "bun squint watch --repl true")
  dev:bun (shell "bun run build.js --watch")
  dev:server (shell {:dir "target"} "bun --watch run server.js")
  -dev {:depends [dev:squint dev:bun dev:server]}
  dev {:depends [build]
       :task (run '-dev {:parallel true})}
  
  build:squint (shell "bun squint compile")
  build:bun (shell "bun run build.js")
  build {:depends [build:squint build:bun]}

  clean (shell "rm -rf target build")}}
